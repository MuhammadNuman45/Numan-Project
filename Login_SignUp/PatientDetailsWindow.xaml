<Window x:Class="Login_SignUp.PatientDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Patient Details" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <TextBlock Text="MRN:" FontWeight="Bold" Margin="10,10,0,0"/>
        <TextBlock x:Name="MRNDetailTextBlock" Margin="70,10,10,0"/>

        <TextBlock Text="Name:" FontWeight="Bold" Margin="10,40,0,0"/>
        <TextBlock x:Name="NameDetailTextBlock" Margin="70,40,10,0"/>

        <TextBlock Text="Patient ID:" FontWeight="Bold" Margin="10,70,0,0"/>
        <TextBlock x:Name="PatientIDDetailTextBlock" Margin="70,70,10,0"/>

        <TextBlock Text="Phone Number:" FontWeight="Bold" Margin="10,100,0,0"/>
        <TextBlock x:Name="PhoneNumberDetailTextBlock" Margin="70,100,10,0"/>
    </Grid>
</Window>

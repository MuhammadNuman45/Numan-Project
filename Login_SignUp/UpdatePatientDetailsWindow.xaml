<Window x:Class="Login_SignUp.UpdatePatientDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Patient Details" Height="500" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="SingleBorderWindow">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Patient Name" Margin="0,0,0,5"/>
            <TextBox x:Name="PatientNameTextBox" Margin="0,0,0,15"/>

            <TextBlock Text="MRN" Margin="0,0,0,5"/>
            <TextBox x:Name="MRNTextBox" Margin="0,0,0,15"/>

            <TextBlock Text="Phone Number" Margin="0,0,0,5"/>
            <TextBox x:Name="PhoneNumberTextBox" Margin="0,0,0,15"/>

            <TextBlock Text="File Type" Margin="0,0,0,5"/>
            <ComboBox x:Name="FileTypeComboBox" Margin="0,0,0,15">
                <ComboBoxItem Content="In Patient"/>
                <ComboBoxItem Content="Out Patient"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Width="80" Margin="0,0,10,0" Click="SaveButton_Click" Background="Green" Foreground="White"/>
                <Button Content="Cancel" Width="80" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
